<h1><%= @resource.name %> <%= @resource.id %></h1>

<table>
  <% @resource.fields.each do |field| %>
    <% if field.readable? %>
      <tr>
        <td>
          <%= field.label %>
        </td>
        <td>
          <%= field.value %>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>

<%= link_to 'Edit', edit_resource_path(id: @resource.id) %>
<%= link_to 'Delete', resource_path(id: @resource.id), method: :delete %>
