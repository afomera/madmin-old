<div class="form-group">
  <%= form.label field.key %>
  <%= form.select field.foreign_key,
                  options_from_collection_for_select(field.foreign_class.send(field.foreign_scope), :id, field.foreign_display_value, field.value.try(:id)),
                  { include_blank: true },
                  class: 'form-control' %>
</div>
